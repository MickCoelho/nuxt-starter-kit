{
	"name": "nuxt-starter-kit",
	"version": "1.0.0",
	"description": "Nuxt starter kit",
	"author": "mick.coelho@gmail.com",
	"private": false,
	"scripts": {
		"dev": "nuxt",
		"build": "nuxt build",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:css": "stylelint ./assets/**/*.css ./components/**/*.css ./layouts/**/*.css ./pages/**/*.css ./static/**/*.css",
		"lint:css:autofix": "stylelint -r ./assets/**/*.css ./components/**/*.css ./layouts/**/*.css ./pages/**/*.css ./static/**/*.css -c ./.stylelintrc",
		"lint:js": "eslint --ext js,vue 'pages/' 'components/' 'layouts/' 'middleware/' 'assets/' 'lib/' --cache",
		"lint:js:autofix": "eslint --fix --ext js,jsx pages/ components/ layouts/ middleware/ lib/",
		"precommit": "npm run lint"
	},
	"dependencies": {
		"nuxt": "^1.0.0"
	},
	"devDependencies": {
		"babel-eslint": "^8.2.1",
		"eslint": "^4.15.0",
		"eslint-friendly-formatter": "^3.0.0",
		"eslint-loader": "^1.7.1",
		"eslint-plugin-vue": "^4.0.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-hexrgba": "^1.0.1",
		"postcss-import": "^11.1.0",
		"postcss-nested": "^3.0.0",
		"postcss-responsive-type": "^1.0.0",
		"stylelint": "^9.3.0",
		"stylelint-declaration-use-variable": "^1.6.1"
	}
}
